# EI-Expenses Environment Variables - Local Development
# This file is for local development only and should NOT be committed to git

# ============================================
# DEVELOPMENT MODE
# ============================================
# Set to 'true' to use mock data (no database required)
# Set to 'false' to use real Azure services
NEXT_PUBLIC_USE_MOCK=true

# ============================================
# APPLICATION SETTINGS
# ============================================
# App URL for local development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# App name and version
NEXT_PUBLIC_APP_NAME=EI-Expenses
NEXT_PUBLIC_APP_VERSION=0.1.0

# ============================================
# AZURE SERVICES (Not needed when USE_MOCK=true)
# ============================================
# Azure SQL Database
# Format: Server=tcp:your-server.database.windows.net,1433;Database=your-db;User ID=your-user;Password=your-password;Encrypt=true;
DATABASE_URL=

# Azure Blob Storage for receipts
# Get from Azure Portal > Storage Account > Access Keys
AZURE_STORAGE_CONNECTION_STRING=

# Azure Storage Container Name
AZURE_STORAGE_CONTAINER_NAME=receipts

# ============================================
# AUTHENTICATION (Phase 2)
# ============================================
# Azure AD B2C Configuration
AZURE_AD_B2C_TENANT_ID=
AZURE_AD_B2C_CLIENT_ID=
AZURE_AD_B2C_CLIENT_SECRET=
AZURE_AD_B2C_TENANT_NAME=
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-here-generate-with-openssl

# ============================================
# AI SERVICES
# ============================================
# OpenAI API for GPT-4 Vision OCR
# Get from https://platform.openai.com/api-keys
OPENAI_API_KEY=

# OpenAI Model Configuration
OPENAI_MODEL=gpt-4-vision-preview
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.2

# ============================================
# GOOGLE SERVICES (Optional)
# ============================================
# Google Maps API for fuel expense locations
# Get from https://console.cloud.google.com/
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=AIzaSyCbvfi6w5BiE4nxipUL8KAXb4mTNPSDZGk

# ============================================
# DEVELOPMENT SETTINGS
# ============================================
# Enable debug logging
NEXT_PUBLIC_DEBUG=true

# Mock data settings
MOCK_DATA_DELAY=500
MOCK_OCR_DELAY=1500
MOCK_DATA_SEED=true

# ============================================
# API SETTINGS
# ============================================
# API Rate Limiting
API_RATE_LIMIT_ENABLED=false
API_RATE_LIMIT_REQUESTS=100
API_RATE_LIMIT_WINDOW=60000

# CORS Settings
CORS_ENABLED=true
CORS_ORIGIN=http://localhost:3000

# ============================================
# EXPORT SETTINGS
# ============================================
# Excel export settings
EXCEL_TEMPLATE_PATH=./templates/expense-report.xlsx
EXCEL_MAX_ROWS=10000
EXCEL_INCLUDE_RECEIPTS=true

# ============================================
# MONITORING (Optional)
# ============================================
# Application Insights (Azure)
APPLICATIONINSIGHTS_CONNECTION_STRING=

# Sentry Error Tracking (Optional)
SENTRY_DSN=
SENTRY_ENVIRONMENT=development

# ============================================
# FEATURE FLAGS
# ============================================
# Enable/disable features during development
NEXT_PUBLIC_FEATURE_OCR=true
NEXT_PUBLIC_FEATURE_GOOGLE_MAPS=true
NEXT_PUBLIC_FEATURE_EXCEL_EXPORT=true
NEXT_PUBLIC_FEATURE_PWA=true
NEXT_PUBLIC_FEATURE_OFFLINE=false

# ============================================
# DEVELOPMENT TOOLS
# ============================================
# Prisma
# Shows detailed query logs in development
PRISMA_LOG_LEVEL=info

# Next.js
# Enables strict mode for better error detection
NEXT_STRICT_MODE=true

# ============================================
# NOTES FOR DEVELOPERS
# ============================================
# 1. Copy this file to .env.local for local development
# 2. Never commit .env.local to git (it's in .gitignore)
# 3. Start with NEXT_PUBLIC_USE_MOCK=true to develop without Azure
# 4. Add real API keys only when needed for specific features
# 5. Use different .env files for different environments:
#    - .env.local (local development)
#    - .env.staging (staging environment)
#    - .env.production (production environment)