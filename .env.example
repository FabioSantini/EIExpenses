# EI-Expenses Environment Variables - Example Template
# Copy this file to .env.local and fill in your values

# Development Mode (true = use mock data, false = use real services)
NEXT_PUBLIC_USE_MOCK=true

# Application URL
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Azure SQL Database (Required for production)
DATABASE_URL=

# Azure Blob Storage (Required for production)
AZURE_STORAGE_CONNECTION_STRING=
AZURE_STORAGE_CONTAINER_NAME=receipts

# Azure AD B2C Authentication (Required for production)
AZURE_AD_B2C_TENANT_ID=
AZURE_AD_B2C_CLIENT_ID=
AZURE_AD_B2C_CLIENT_SECRET=
NEXTAUTH_SECRET=

# OpenAI API (Required for OCR features)
OPENAI_API_KEY=

# Google Maps API (Optional - for fuel expenses)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=

# Feature Flags
NEXT_PUBLIC_FEATURE_OCR=true
NEXT_PUBLIC_FEATURE_EXCEL_EXPORT=true
NEXT_PUBLIC_FEATURE_PWA=true